{
  "apps": [
    {
      "name": "worker",
      "script": "worker/worker.js",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "api",
      "script": "api/server.js",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "web",
      "script": "web/server.js",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "yolowatch",
      "repo": "https://github.com/mattgawarecki/yolowatch",
      "post-deploy": "npm i ; pm2 startOrRestart ecosystem.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
